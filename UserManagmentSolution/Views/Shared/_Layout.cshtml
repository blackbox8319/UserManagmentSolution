@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shubham Tamrakar</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1; /* Makes main content fill available space */
        }

        .footer {
            background-color: #1f2937; /* Dark gray */
            color: #f3f4f6; /* Light gray */
            padding: 15px 0;
            text-align: center;
        }

            .footer a {
                color: #10b981; /* Emerald green links */
                text-decoration: none;
                font-weight: 500;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

            .footer small {
                display: block;
                margin-top: 5px;
                font-weight: 400;
            }

        .navbar-nav .nav-link:hover {
            color: #fbbf24 !important; /* Amber hover */
            transition: color 0.3s ease;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg, #10b981, #3b82f6);">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">BoostYourSkill🚀</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link fw-semibold">Hello, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link fw-semibold">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-4 p-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div>
            &copy; <span id="currentYear"></span> Shubham Tamrakar. All rights reserved.
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Dynamic Year Script -->
    <script>
        document.getElementById('currentYear').textContent = new Date().getFullYear();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
