@model IEnumerable<UserManagmentSolution.Models.ApplicationUser>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">User Management</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @string.Join(", ", ViewBag.UserRoles[user.Id] as List<string> ?? new List<string>())
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
