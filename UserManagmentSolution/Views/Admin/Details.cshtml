@model UserManagmentSolution.Models.ApplicationUser
@{
    ViewData["Title"] = "User Details";
}
<h2>User Details</h2>

<div class="card w-50">
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Firstname:</strong> @Model.FirstName</p>
        <p><strong>Lastname:</strong> @Model.LastName</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p><strong>Roles:</strong> @string.Join(", ", (IEnumerable<string>?)ViewBag.Roles ?? Enumerable.Empty<string>())</p>
    </div>
</div>
